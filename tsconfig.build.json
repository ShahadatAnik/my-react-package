{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		},
		"outDir": "./dist",
		"declaration": true,
		"declarationMap": true,
		"emitDeclarationOnly": true,
		"tsBuildInfoFile": "./node_modules/.tmp/tsconfig.build.tsbuildinfo",
		"jsx": "react-jsx"
	},
	"include": ["./src/**/*"],
	"exclude": ["**/__mocks__/**/*", "**/__tests__/**/*", "**/*.test.*"]
}
